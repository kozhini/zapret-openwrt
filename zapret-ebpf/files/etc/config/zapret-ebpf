config zapret-ebpf 'main'
    option enabled '1'            # Включение/выключение всей системы
    option iface 'br-lan'         # Интерфейс для применения eBPF
    option xdp_mode 'skb'         # Режим XDP: 'skb' или 'native'
    option log_level '1'          # Уровень логирования: 0=off, 1=info, 2=debug

# Включение/отключение отдельных фильтров
config filter 'zapret_filter'
    option enabled '1'            # Основной сетевой фильтр

config filter 'tls_fingerprint'
    option enabled '1'            # TLS Fingerprint

config filter 'sni_encrypt'
    option enabled '1'            # SNI фильтр

config filter 'quic_filter'
    option enabled '1'            # QUIC фильтр

config filter 'packet_fragment'
    option enabled '1'            # Фрагментация пакетов
